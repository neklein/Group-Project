<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="container" style="padding-top:0px">
    <div class="jumbotron" style="background-image:url(/images/banner.jpg);background-size:cover;padding-bottom:10px;margin-bottom:0px;height:280px"></div>
    
    <div class="row">

        <div class="navbar navbar-header navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown">
                                Categories
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <li>@Html.ActionLink((string)@category.CategoryTag, "ByCategory", "Home", new { id = category.CategoryID }, null)</li>
                                }
                            </ul>

                        </li>
                        <li>@Html.ActionLink("Authors", "ByAuthor", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>


<div class="row">
        <div class="container body-content col-sm-9">
            <div class="col-sm-12">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - CMonster Web Design</p>
                </footer>
            </div>
        </div>

        <div class="container col-sm-3">
            <div class="col-sm-12">
                <h4><strong>Search:</strong></h4>
                <div class="input-group add-on">
                    <input class="form-control" placeholder="Search by Category" id="search-term" type="text">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>

                <p></p>
                <hr />
                <div id="create-new-button">
                    @Html.ActionLink("Create New", "Create", "Admin", null, new { @class = "btn btn-info" })
                </div>
                <p></p>
                <hr />
                <p></p>
                <div id="review-pending-button">
                    @Html.ActionLink("Review Pending", "Review", "Admin", null, new { @class = "btn btn-info" })
                </div>
                <p></p>
                <hr />
                <p></p>
                <div id="StaticObjects">


                </div>

            </div>
            </div>
        </div>


    </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
