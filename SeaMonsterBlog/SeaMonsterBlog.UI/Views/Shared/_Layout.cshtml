<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="container">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
    <div class="text-center"><h1><strong>@Html.ActionLink("Sea Monsters and the Monsters who Hunt Them", "Index", "Home", null,null)</strong></h1></div>
    <hr />
    <div class="row">
        
        <div class="container body-content col-sm-9">
            <div class="col-sm-12">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - CMonster Web Design</p>
                </footer>
            </div>
        </div>
        
        <div class="container col-sm-3">
            <div class="col-sm-12">
                <h4><strong>Search:</strong></h4>
                <div class="input-group add-on">
                    <input class="form-control" placeholder="Search by Category" id="search-term" type="text">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>

                <p></p>
                <hr />
                <div id="create-new-button">
                    @Html.ActionLink("Create New", "Create", "Admin", null, new { @class = "btn btn-info" })
                </div>
                <p></p>
                <hr />
                <p></p>
                <div id="review-pending-button">
                    @Html.ActionLink("Review Pending", "Review", "Admin", null, new { @class = "btn btn-info" })
                </div>
                <p></p>
                <hr />
                <p></p>
                <div id="StaticObjects">


                </div>

            </div>
        </div>

        
    </div>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
