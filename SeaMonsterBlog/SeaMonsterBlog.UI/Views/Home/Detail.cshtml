@model SeaMonsterBlog.UI.Models.DetailVM

@{
    ViewBag.Title = "Detail";
    ViewBag.Categories = Model.Categories;
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3><storng>@Model.Post.PostTitle</storng></h3>
                <h5><strong>@Model.Post.DisplayDate  |  {blog.author}</strong></h5>
            </div>
            <div class="panel-body">
                <p>list of categories will go here</p>
            </div>
        </div>

        <div class="well-lg">
            @Model.Post.PostText
        </div>

        <div class="panel-body">
            <div class="label label-success">
                <p>list of categories will go here</p>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="co-sm-12">
        <h4>Comments</h4>
        
        @foreach (var comment in Model.Comments)
        {
            <p>@comment.CommenterName  |  @comment.CommentDate</p>
            <p>@comment.CommentText</p>

            if (comment.Replies == null)
            {
                <div class="form-inline">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="reply">Reply</label>
                            <input type="text" class="form-control" id="reply" >
                            <button id="btn-reply" class="btn btn-default">Reply</button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                foreach (var reply in comment.Replies)
                {
                    <p>@reply.ReplyName  |  @reply.ReplyDate</p>
                    <p>@reply.ReplyText</p>

                    <div class="form-inline">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="reply">Reply</label>
                                <input type="text" class="form-control" id="reply">
                                <button id="btn-reply" class="btn btn-default">Reply</button>
                            </div>
                        </div>
                    </div>
                }
            }

        }

        <div class="form-inline">
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="reply">Comment</label>
                    <input type="text" class="form-control" id="new-comment">
                    <button id="btn-reply" class="btn btn-default">Comment</button>
                </div>
            </div>
        </div>

    </div>
</div>

