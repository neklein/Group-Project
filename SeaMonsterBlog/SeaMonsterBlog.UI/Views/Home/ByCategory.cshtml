@model SeaMonsterBlog.UI.Models.ByAuthorCategoryVM


@{
    ViewBag.Title = "ByCategory";
    ViewBag.Categories = Model.Categories;
}

<h2>Blogs in the </h2>

<div class="row">
    <div class="col-md-10">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Date Published</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model.Posts)
                {
                    <tr>@row.PostTitle</tr>
                    <tr>@row.Author</tr>
                    <tr>@row.DisplayDate</tr>
                    <tr>@Html.ActionLink("VIEW","Home", "Detail", new { id = row.PostId }, new { @class = "btn btn-warning" })</tr>
                }
            </tbody>
        </table>


    </div>
</div>


