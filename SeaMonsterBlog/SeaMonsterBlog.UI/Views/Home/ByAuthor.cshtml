@model SeaMonsterBlog.UI.Models.ByAuthorCategoryVM


@{
    ViewBag.Title = "ByAuthor";
    ViewBag.Categories = Model.Categories;
    ViewBag.StaticPosts = Model.StaticPosts;
}


<h2>Blogs by Author</h2>

<div class="row">
    @using (Html.BeginForm("ByCategory", "Home", FormMethod.Post))
    {
        <div class="col-md-4 col-md-offset-8">
            <div class="from-group">
                <label>Category</label>
                @Html.DropDownListFor(c => c.AuthorName, Model.AuthorsSelectList, new { @clas = "form-control" })
            </div>
            <button class="btn btn-warning">Select Author</button>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-10">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Cateogory</th>
                    <th scope="col">Date Published</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Posts != null)
                {
                    foreach (var row in Model.Posts)
                    {
                        <tr>@row.PostTitle</tr>
                        <tr>@row.SelectedCategories</tr>
                        <tr>@row.DisplayDate</tr>
                        <tr>@Html.ActionLink("VIEW", "Home", "Detail", new { id = row.PostId }, new { @class = "btn btn-warning" })</tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
